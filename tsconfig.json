{
    "$schema": "http://json.schemastore.org/tsconfig",

    "compilerOptions": {
        "noEmit": true,
        "rootDir": "./src/",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "listEmittedFiles": true,
        "lib": [ "es2017" ],
        "plugins": [{
            "name": "tslint-language-service"
        }]
    },

    "include": [
        "src/*.ts"
    ]
}